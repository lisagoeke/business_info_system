@model IEnumerable<Assignment.Models.District>

@{
    ViewBag.Title = "Districts Overview";
}

<h2>Districts Overview</h2>

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISOCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Population)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISOCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Population)
        </td>
    </tr>
}

</table>
